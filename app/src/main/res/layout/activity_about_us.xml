<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.AboutUs">

    <!--androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="About App"
        /-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/banner1"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/ic_launcher_round"
                    app:civ_border_width="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    app:civ_border_color="@color/blue_main_bg"
                    android:elevation="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Name"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue_main_bg"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Slogan or Small Description"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:textSize="12sp"
                    android:textColor="@color/blue_main_bg"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your school’s astonishing About Us page is ready and available to all
                users! Well done!
As you can see, it all comes down to creating an About Us page that is informative, impactful and
encourages the site visitor to learn more about your school and what it has to offer. In return,
this increases the likelihood of making your online school stand out from the rest within the industry.
Just make sure to twist answering the site visitor’s question – ‘what’s in it for me?’ Judging from
what you have currently on your About Us page, what would you change to make it better?
For more information on creating online courses, check our blog resources that offer a complete
step-by-step guide on how to do so and much more!"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/blac_shade_1"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_keyboard_arrow_down_24"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardMaxElevation="5dp"
                    app:cardBackgroundColor="@color/blue_fg"
                    android:layout_marginStart="10dp"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/ic_launcher_round"
                            app:civ_border_width="1dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            app:civ_border_color="@color/blue_main_bg"
                            android:elevation="2dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Mission"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/blue_main_bg"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Mission is to provide you the knowledge and the skills you need to be able to raft the kinds of stories that you want to tell"
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:textSize="12sp"
                            android:textColor="@color/blue_main_bg"
                            android:layout_marginBottom="20dp"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardMaxElevation="5dp"
                    app:cardBackgroundColor="@color/blue_fg"
                    android:layout_marginEnd="10dp"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/ic_launcher_round"
                            app:civ_border_width="1dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            app:civ_border_color="@color/blue_main_bg"
                            android:elevation="2dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Values"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/blue_main_bg"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Mission is to provide you the knowledge and the skills you need to be able to raft the kinds of stories that you want to tell"
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:textSize="12sp"
                            android:textColor="@color/blue_main_bg"
                            android:layout_marginBottom="20dp"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardMaxElevation="5dp"
                    app:cardBackgroundColor="@color/blue_fg"
                    android:layout_marginStart="10dp"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/ic_launcher_round"
                            app:civ_border_width="1dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            app:civ_border_color="@color/blue_main_bg"
                            android:elevation="2dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Dream"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/blue_main_bg"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Mission is to provide you the knowledge and the skills you need to be able to raft the kinds of stories that you want to tell"
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:textSize="12sp"
                            android:textColor="@color/blue_main_bg"
                            android:layout_marginBottom="20dp"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardMaxElevation="5dp"
                    app:cardBackgroundColor="@color/blue_fg"
                    android:layout_marginEnd="10dp"
                    app:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/ic_launcher_round"
                            app:civ_border_width="1dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            app:civ_border_color="@color/blue_main_bg"
                            android:elevation="2dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Goal"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/blue_main_bg"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Mission is to provide you the knowledge and the skills you need to be able to raft the kinds of stories that you want to tell"
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:textSize="12sp"
                            android:textColor="@color/blue_main_bg"
                            android:layout_marginBottom="20dp"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fg"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version -> 1.0"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginVertical="5dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fg"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advertise with us"
                android:layout_marginVertical="5dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fg"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect with us"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                />


            <TextView
                android:id="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:drawableStart="@drawable/round_alternate_email_24"
                android:drawablePadding="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fg"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/connect_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect with us on Facebook"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:drawableStart="@drawable/round_alternate_email_24"
                android:drawablePadding="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fg"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/connect_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect with us on Twitter"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:drawableStart="@drawable/round_alternate_email_24"
                android:drawablePadding="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fg"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/connect_youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect with us on Youtube"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:drawableStart="@drawable/round_alternate_email_24"
                android:drawablePadding="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
