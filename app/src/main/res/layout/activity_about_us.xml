                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/connect_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect with us on Instagram"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:drawableStart="@drawable/round_alternate_email_24"
                android:drawablePadding="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fg"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/rate_playstore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Us on Playstore"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:drawableStart="@drawable/round_alternate_email_24"
                android:drawablePadding="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fg"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_fg"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/contact_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>