<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_curve_20"
    android:elevation="3dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="7.5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner1"
            android:layout_gravity="center"
            android:background="#D9DDFB"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rounded_bookmark_24"
            android:layout_gravity="end|top"
            android:background="@drawable/circle1"
            android:layout_margin="10dp"
            app:tint="@color/blue3"
            android:padding="2dp"
            android:backgroundTint="@color/blue_main_bg"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java\nCourse"
        android:gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="24 hours"
        android:gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="11sp"
        android:textColor="#838585"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.9*"
        android:gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="10sp"
        android:textColor="#B23797CA"
        />

</LinearLayout>