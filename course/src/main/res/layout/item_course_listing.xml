<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner1"
                android:layout_gravity="center"
                android:background="#D9DDFB"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/c_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Java\nCourse"
                android:gravity="start"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/c_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Johnny jonny"
                android:gravity="start"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="11sp"
                android:textColor="#838585"
                />

            <TextView
                android:id="@+id/c_cate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category , Hastags"
                android:gravity="start"
                android:layout_marginHorizontal="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="10sp"
                android:textColor="#535353"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/c_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:gravity="start"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="10sp"
                android:textColor="#838585"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9* "
                    android:gravity="start"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="10sp"
                    android:textColor="#009688"
                    />
                <TextView
                    android:id="@+id/c_dur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90 hours"
                    android:gravity="start"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="10sp"
                    android:textColor="#838585"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="7dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add/Go to Cart"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#009688"
            android:textStyle="bold"
            android:textSize="13sp"
            />
        <!--TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Buy Now"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="13sp"
            /-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#D3D3D3"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>